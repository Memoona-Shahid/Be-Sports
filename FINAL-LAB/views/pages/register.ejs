<section class="auth-section" style="padding: 100px 0; text-align: center; background: #111; color: white;">
    <div class="container">
        <h2>CREATE ACCOUNT</h2>
        <form action="/register" method="POST" style="max-width: 400px; margin: 40px auto; text-align: left;">
            <label>Full Name</label>
            <input type="text" name="name" required style="width: 100%; padding: 10px; margin-bottom: 20px;">
            
            <label>Email Address</label>
            <input type="email" name="email" required style="width: 100%; padding: 10px; margin-bottom: 20px;">
            
            <label>Password</label>
            <input type="password" name="password" required style="width: 100%; padding: 10px; margin-bottom: 20px;">
            
            <button type="submit" class="btn-small" style="width: 100%;">REGISTER</button>
        </form>
        <p>Already have an account? <a href="/login" style="color: #9cff00;">Login here</a></p>
    </div>
</section>