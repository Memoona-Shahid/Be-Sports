<div class="admin-form-container" style="max-width: 800px; margin: 20px auto; background: white; padding: 30px; border-radius: 8px; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
    <h2 style="margin-bottom: 20px; color: #333;"><%= isEdit ? 'Edit Product' : 'Add New Product' %></h2>
    <hr style="margin-bottom: 25px; border: 0; border-top: 1px solid #eee;">

    <form action="<%= isEdit ? '/admin/inventory/edit/' + product._id : '/admin/inventory/add' %>" method="POST">
        <div style="margin-bottom: 15px;">
            <label style="display: block; font-weight: bold; margin-bottom: 5px;">Product Name</label>
            <input type="text" name="name" value="<%= isEdit ? product.name : '' %>" required style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 5px;">
        </div>

        <div style="display: flex; gap: 20px; margin-bottom: 15px;">
            <div style="flex: 1;">
                <label style="display: block; font-weight: bold; margin-bottom: 5px;">Price ($)</label>
                <input type="number" step="0.01" name="price" value="<%= isEdit ? product.price : '' %>" required style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 5px;">
            </div>
            <div style="flex: 1;">
                <label style="display: block; font-weight: bold; margin-bottom: 5px;">Stock Level</label>
                <input type="number" name="stock" value="<%= isEdit ? product.stock : '' %>" required style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 5px;">
            </div>
        </div>

        <div style="margin-bottom: 15px;">
            <label style="display: block; font-weight: bold; margin-bottom: 5px;">Category</label>
            <select name="category" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 5px;">
                <option value="Footwear" <%= isEdit && product.category === 'Footwear' ? 'selected' : '' %>>Footwear</option>
                <option value="Apparel" <%= isEdit && product.category === 'Apparel' ? 'selected' : '' %>>Apparel</option>
                <option value="Accessories" <%= isEdit && product.category === 'Accessories' ? 'selected' : '' %>>Accessories</option>
                <option value="Nutrition" <%= isEdit && product.category === 'Nutrition' ? 'selected' : '' %>>Nutrition</option>
            </select>
        </div>

        <div style="margin-bottom: 25px;">
            <label style="display: block; font-weight: bold; margin-bottom: 5px;">Image URL / Filename</label>
            <input type="text" name="image" value="<%= isEdit ? product.image : '' %>" required placeholder="e.g. shoe1.jpg" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 5px;">
        </div>

        <div style="display: flex; gap: 10px;">
            <button type="submit" class="btn" style="background: #9cff00; color: black; border: none; padding: 12px 30px; font-weight: bold; cursor: pointer; border-radius: 5px;">
                <%= isEdit ? 'Update Changes' : 'Save Product' %>
            </button>
            <a href="/admin/inventory" class="btn" style="background: #eee; color: #333; padding: 12px 30px; text-decoration: none; border-radius: 5px;">Cancel</a>
        </div>
    </form>
</div>